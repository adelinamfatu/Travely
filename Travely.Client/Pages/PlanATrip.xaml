<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Travely.Client.Pages.PlanATrip"
       >
    <Grid>
        <StackLayout>
           

            <Image  Margin="50,20,50,30" Source="adventure_logo" WidthRequest="200" HeightRequest="200" />
            <Frame BorderColor="Black" CornerRadius="5" Padding="0" Margin="20">
                <Entry Placeholder="Where to?"  />
            </Frame>

            <Label Text="Start Date" Margin="20,0,0,0" FontAttributes="Bold" />
            <Frame BorderColor="Black" CornerRadius="5" Padding="0" Margin="20">
                <DatePicker AutomationProperties.Name="Start Date"/>
            </Frame>

            <Label Text="Start Date" Margin="20,0,0,0" FontAttributes="Bold" />
            <Frame BorderColor="Black" CornerRadius="5" Padding="0" Margin="20">
                <DatePicker AutomationProperties.Name="End Date" />
            </Frame>
            <Button  Text="Start Planning" BackgroundColor="Black" HeightRequest="60" WidthRequest="300" Margin="20,40,20,40"/>
        </StackLayout>
    </Grid>
</ContentPage>