<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Travely.Client.Resources.UIResources"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="Travely.Client.Pages.MapPage"
             Title="{x:Static resources:PageNameResources.MapPageName}">
    
    <StackLayout>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Entry 
                x:Name="searchEntry" 
                Text="{Binding Location}"
                Placeholder="Search location"
                Focused="OnSearchEntryFocused"
                HorizontalOptions="FillAndExpand"/>
            <ImageButton 
                Source="magnifying_glass.png" 
                Command="{Binding SearchPlaceCommand}"
                WidthRequest="30" 
                HeightRequest="30" 
                Margin="0,0,10,0"/>
        </StackLayout>
        
        <maps:Map 
            x:Name="map" 
            MapClicked="PinLocationOnMap"/>
    </StackLayout>
</ContentPage>