<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Travely.Client.Resources.UIResources"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="Travely.Client.Pages.ProfilePage"
             xmlns:vm="clr-namespace:Travely.Client.Models"
             Title="{x:Static resources:PageNameResources.ProfilePageName}">
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,0">
            <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5" Margin="0,20,0,10">
                <Label 
                    Text="{x:Static resources:ProfileResources.Name}" 
                    VerticalTextAlignment="Center" 
                    TextColor="Black"/>
                
                <Entry 
                    Text="{Binding Name}" 
                    Placeholder="Name" 
                    WidthRequest="80" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center"/>

                <!-- Am sters aceasta comanda => dadea eroare  Command="SaveNameCommand" -->
                <Button 
                    Text="{x:Static resources:ProfileResources.Save}"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" 
                    WidthRequest="80" 
                    HeightRequest="40" 
                    BackgroundColor="#415a77"/>
            </HorizontalStackLayout>

            <Frame Margin="10">
                <VerticalStackLayout Grid.Column="1" Grid.Row="0" Padding="5" VerticalOptions="Center" HorizontalOptions="Center">
                    <StackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" Spacing="65" Margin="10">
                        <Grid ColumnSpacing="20">
                            <Label Text="{x:Static resources:ProfileResources.Statistics}" Margin="0,0,0,0" FontAttributes="Bold" FontSize="25" VerticalOptions="Center" HorizontalOptions="Center"/>
                        </Grid>
                    </StackLayout>
                </VerticalStackLayout>
            </Frame>

            <Label Text="{x:Static resources:ProfileResources.Continents}" Margin="0,20,0,0" FontAttributes="Bold" />
            <charts:ChartView Chart="{Binding ContinentChart}" HeightRequest="150"/>
            <Label Text="{x:Static resources:ProfileResources.EuropeanCountries}" Margin="0,50,0,0" FontAttributes="Bold"/>
            <charts:ChartView Chart="{Binding EuropeanCountriesChart}" HeightRequest="150"/>
            <Label Text="{x:Static resources:ProfileResources.TravelFrequency}" Margin="0,50,0,0" FontAttributes="Bold"/>
            <charts:ChartView Chart="{Binding SeasonsFrequencyChart}" HeightRequest="150" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>