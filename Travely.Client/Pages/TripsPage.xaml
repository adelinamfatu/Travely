<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:viewModels="clr-namespace:Travely.Client.Models"
             xmlns:resources="clr-namespace:Travely.Client.Resources.UIResources"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travely.Client.Pages.TripsPage"
             Title="{x:Static resources:PageNameResources.TripPageName}">

    <ScrollView>
        <VerticalStackLayout>
            <Grid Margin="10" Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button 
                    Text="{x:Static resources:TripsResources.StartPlanningButton}" 
                    BackgroundColor="Black" 
                    HeightRequest="45" 
                    Grid.Column="0"
                    HorizontalOptions="Start" 
                    VerticalOptions="Center"
                    Clicked="StartPlanning"/>

                <ImageButton 
                    Grid.Column="1"
                    Source="sort.png"
                    HeightRequest="40" 
                    WidthRequest="45" 
                    HorizontalOptions="End" 
                    VerticalOptions="Center"
                    Clicked="LoadPastTripsClicked" />
            </Grid>

            <CollectionView x:DataType="viewModels:TripsViewModel" ItemsSource="{Binding Trips}" SelectionMode="Single" >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:TripViewModel">
                        <Frame Margin="10,20,10,0" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" >
                                    <StackLayout Margin="0,10,0,0">
                                        <Label Text="{Binding TripTitle}" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Image Source="{Binding CountryFlagUrl}" HeightRequest="60" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,10"/>
                                        <StackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
                                            <Grid ColumnSpacing="40">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Label Text="{x:Static resources:TripsResources.Country}" FontAttributes="Bold" FontSize="16" Grid.Row="0" Grid.Column="0"  HorizontalOptions="Center"  VerticalOptions="Center" Padding="30,0,0,0" />
                                                <Label Text="{x:Static resources:TripsResources.StartDate}" FontAttributes="Bold" FontSize="16" Grid.Row="0" Grid.Column="1"  HorizontalOptions="Center"  VerticalOptions="Center"  />
                                                <Label Text="{x:Static resources:TripsResources.EndDate}" FontAttributes="Bold" FontSize="16" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center"  VerticalOptions="Center"/>

                                                <Label Text="{Binding CountryName}" FontSize="16" Grid.Row="1" Grid.Column="0"  HorizontalOptions="Center"  VerticalOptions="Center" Margin="30,0,0,0" />
                                                <Label Text="{Binding StartDate, StringFormat='{0:dd.MM.yyyy}'}" Grid.Row="1" Grid.Column="1"  HorizontalOptions="Center"  VerticalOptions="Center"   />
                                                <Label Text="{Binding EndDate, StringFormat='{0:dd.MM.yyyy}'}" Grid.Row="1" Grid.Column="2"  HorizontalOptions="Center"  VerticalOptions="Center"   />
                                            </Grid>
                                        </StackLayout>
                                    </StackLayout>
                                </Grid>

                                <ImageButton Grid.Column="1"
                                             Source="edit_icon.png"
                                             WidthRequest="20" HeightRequest="20"
                                             HorizontalOptions="End" VerticalOptions="Start"
                                             BackgroundColor="Transparent"
                                             Clicked="NavigateToEditTripPage"
                                             CommandParameter="{Binding Id}"
                                             Margin="10"/>

                                <ImageButton Grid.Column="4"
                                             Source="delete_icon.png"
                                             WidthRequest="20" HeightRequest="20"
                                             HorizontalOptions="End" VerticalOptions="Start"
                                             BackgroundColor="Transparent"
                                             CommandParameter="{Binding Id}"
                                             Clicked="OnDeleteTripClicked"
                                             Margin="10"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>