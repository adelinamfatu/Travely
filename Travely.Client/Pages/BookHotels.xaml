<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travely.Client.Pages.BookHotels"
             Title="BookHotels">
    <Grid>
        <StackLayout Margin="20">
            <!--<Label Text="Book A Hotel" FontSize="Large" />-->
            <Entry Placeholder="Where to?" />
            <DatePicker AutomationProperties.Name="Start Date" />
            <DatePicker AutomationProperties.Name="End Date" />
            <Entry Placeholder="Rooms"/>
            <Entry Placeholder="Adults"/>
            <Entry Placeholder="Children"/>
            <Button Text="Search Hotels" />
        </StackLayout>
    </Grid>
</ContentPage>