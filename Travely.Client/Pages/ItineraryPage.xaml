<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travely.Client.Pages.ItineraryPage"
             Title="ItineraryPage">
    <ScrollView>
        <VerticalStackLayout>

            <Button 
                Clicked="NavigateToPreviousPage"
                VerticalOptions="Start" 
                HorizontalOptions="Start" 
                BackgroundColor="White">
                <Button.ImageSource>
                    <FileImageSource File="back_button.svg" />
                </Button.ImageSource>
            </Button>
            
            <Frame Margin="10">
                <VerticalStackLayout Grid.Column="1" Grid.Row="0" Padding="5" VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="ITINERARY PAGE" FontSize="20" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Select Your Trip Day" FontSize="18" FontAttributes="Bold" Margin="10"/>
              <Frame BorderColor="Black" CornerRadius="5" Padding="0" Margin="15">
                <DatePicker Date="{Binding StartDate}" />
            </Frame>

            <Frame BorderColor="Black" CornerRadius="5" Padding="0" Margin="15">
                <DatePicker Date="{Binding EndDate}" />
            </Frame> 

            <!--<Frame BorderColor="Black" CornerRadius="5" Padding="0" Margin="15">
                <Entry Placeholder="Add Your Day" />
            </Frame>-->

            <Frame x:Name="newDayFrame" Margin="10" IsVisible="False">
                <StackLayout>
                    <Label Text="Day " FontSize="18" FontAttributes="Bold" Margin="20"/>
                    
                    <HorizontalStackLayout Spacing="10">
                        <ImageButton Source="bx_chevron_down.svg" WidthRequest="30" HeightRequest="30"/>
                        <Label Text="Places" FontSize="18" FontAttributes="Bold" Margin="20"/>
                    </HorizontalStackLayout>
                    
                    <Frame BorderColor="Black" CornerRadius="5" Padding="0" Margin="5">
                        <Grid>
                            <Image Source="map.png" VerticalOptions="Center" WidthRequest="20" HorizontalOptions="Start" Margin="10"/>
                            <Entry Placeholder="Add Place" Margin="30,0,0,0"/>
                        </Grid>
                    </Frame>
                    
                </StackLayout>
            </Frame>

            <Button Text="Create Your Itinerary"
                BackgroundColor="Black"
                TextColor="#ffffff"
                FontAttributes="Bold"
                HeightRequest="50"
                CornerRadius="5"
                Margin="10"
                Clicked="OnCreateItineraryClicked" />   

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>