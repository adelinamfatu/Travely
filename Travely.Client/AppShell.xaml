<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Travely.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Travely.Client.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Travely.Client">

    <Shell.FlyoutHeader>
        <Image Source="Resources/Images/logo.png" WidthRequest="100"></Image>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems" >
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Route="Dashboard"
            Icon="home.svg"/>

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="Profile"
            Icon="user.svg"/>

        <ShellContent
            Title="My Trips"
            ContentTemplate="{DataTemplate local:TripsPage}"
            Route="MyTrips" 
            Icon="plane.svg"/>
    </FlyoutItem>

    <ShellContent Title="Edit Trip" Route="EditTripPage" ContentTemplate="{DataTemplate local:EditTripPage}" />

    <MenuItem Text="Edit Trip" Clicked="OpenEditTripPage"/>

</Shell>
